package adventure;

import java.util.Scanner;

public class Game {

	Player player;
	Location location;
	
	public void login() {
		Scanner scan = new Scanner(System.in);
		System.out.println("Welcome to the game! ");
		System.out.println("Name: ");
		String.playerName = scan.nextLine();
		player = new Player(playerName);
		player.selectCha();
				
	}
}
